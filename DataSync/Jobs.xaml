<Window x:Class="DataSync.Jobs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jobs" Height="340" Width="900" Loaded="Window_Loaded">
    <Grid Name="Container">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="dgJobs" IsReadOnly="True"  Width="{Binding ElementName=Container,Path=ActualWidth}"/>

    </Grid>
</Window>
