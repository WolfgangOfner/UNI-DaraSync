<Window x:Name="Manage_Logging_File" x:Class="DataSync.ManageLogFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Log File" Height="163" Width="300" Loaded="Manage_Logging_File_Loaded">
    <Grid>
        <Label x:Name="lbMaxSize" Content="Max size (MB):" HorizontalAlignment="Left" Margin="20,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSize" HorizontalAlignment="Left" Height="23" Margin="111,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92"/>
        <Label x:Name="lbPath" Content="Path:" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="111,92,0,0" VerticalAlignment="Top" Width="75" Click="BtnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="191,92,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <Button x:Name="btnPath" Content="Select" HorizontalAlignment="Left" Margin="111,29,0,0" VerticalAlignment="Top" Width="92" Click="BtnPath_Click"/>
    </Grid>
</Window>
